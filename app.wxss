/**app.wxss**/
.input {
	-webkit-appearance: none;
	background-color: #FFF;
	background-image: none;
	border-radius: 4px;
	border: 1px solid #DCDFE6;
	box-sizing: border-box;
	color: #606266;
	display: inline-block;
	font-size: inherit;
	height: 40px;
	line-height: 40px;
	outline: 0;
	padding: 0 15px;
	transition: border-color .2s cubic-bezier(.645,.045,.355,1);
	width: 100%;
}
.button{
    display: inline-block;
    line-height: 1;
    white-space: nowrap;
    cursor: pointer;
    background: #FFF;
    border: 1px solid #DCDFE6;
    color: #606266;
    -webkit-appearance: none;
    text-align: center;
    box-sizing: border-box;
    outline: 0;
    margin: 0;
    transition: .1s;
    font-weight: 500;
    padding: 12px 20px;
    font-size: 14px;
    border-radius: 4px;
}
.button-success{
    color: #FFF;
    background-color: #67C23A;
    border-color: #67C23A;
}
.button-c{
    padding: 5px 5px;
    background-color: #fff;margin-top: 15px;
    text-align: center;
}
.button-r{
    padding: 5px 5px;
    background-color: #fff;margin-top: 15px;
    text-align: right;
}
.button-l{
    padding: 5px 5px;
    background-color: #fff;margin-top: 15px;
    text-align: left;
}