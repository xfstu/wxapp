page{
  height: 100%;
  position: absolute;
  top: 0px;
  left: 0px;
  background-image: url('../../assets/img/login-bg/bg.jpg');
  background-attachment: fixed;
  background-repeat: no-repeat;
  background-size: cover;
  background-image: url('https://whiteblood.xfstu.top/view/img/bg.3398c294.jpg');
}
.login-div,page{
  background-color: rgba(255, 255, 255, 0.75);
  width: 700rpx;
  height: 200px;
  padding: 120rpx 0px;
  border-radius: 8px;
  margin-left: auto;
  margin-right: auto;
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}
.wxlogin{
  text-align: center;
}
.wx{
  position: absolute;
  top: 5px;
  left: 5px;
